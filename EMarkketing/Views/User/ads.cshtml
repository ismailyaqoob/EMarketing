@using PagedList.Mvc
@model PagedList.IPagedList<EMarkketing.Models.tbl_product>
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    ViewBag.Title = "ads";
}

<h2>Ads</h2>


<div class="form-horizontal">
    <hr />

    <div class="form-group">
        <div class="container" style="height:1150px; ">
            <div class="row">
                <div class="col-lg-12" style="height:100px; border:1px solid solid; ">
                    <img src="~/Content/Uploads/14560020750060463280.png" style="width:100%; height:100%" />
                </div>
            </div>

            @using (@Html.BeginForm("ads", "User"))
            {
                <div class="navbar-form ">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search" name="search" id="search">
                    </div>
                    <button type="submit" class="btn btn-success">Search</button>
                </div>
                <div class="navbar-form navbar-right">
                </div>
            }

            <div class="row" style="margin-bottom:40px">
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-4" style="height:200px;margin-top:100px">
                            <img src="@Url.Content(item.u_image)" style=" height:100%;width:100% ;border-radius:50px 50px 50px 50px" />
                            <h4 style="color:#808080; font-family:'Arial Rounded MT';text-align:center">@Html.ActionLink(@item.pro_name.ToUpper(), "ViewAd", new { id = item.pro_id })</h4>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="form-group">
        <div id="container" style="margin-left: 20px">
            <p></p>
            <p></p>
            <div class="pagination" style="margin-left: 400px">
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
                of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>